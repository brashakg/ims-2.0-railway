# ============================================================================
# IMS 2.0 - Environment Configuration Template
# ============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!
# ============================================================================

# ----------------------------------------------------------------------------
# APPLICATION SETTINGS
# ----------------------------------------------------------------------------
NODE_ENV=production
# Options: development, staging, production

# ----------------------------------------------------------------------------
# BACKEND API SETTINGS
# ----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_URL=http://localhost:8000
# For production: https://your-api-domain.com

# ----------------------------------------------------------------------------
# FRONTEND SETTINGS
# ----------------------------------------------------------------------------
VITE_API_URL=http://localhost:8000/api/v1
# For production: https://your-api-domain.com/api/v1

VITE_APP_NAME=IMS 2.0
VITE_APP_VERSION=2.0.0

# ----------------------------------------------------------------------------
# MONGODB DATABASE CONFIGURATION
# ----------------------------------------------------------------------------
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DATABASE=ims_2_0
MONGO_USERNAME=
MONGO_PASSWORD=
MONGO_AUTH_SOURCE=admin

# Optional MongoDB Settings
MONGO_REPLICA_SET=
MONGO_SSL=false
MONGO_MAX_POOL_SIZE=50
MONGO_MIN_POOL_SIZE=10

# MongoDB Connection URI (Alternative to individual settings)
# If provided, this will override individual settings above
# MONGODB_URI=mongodb://username:password@host:port/database?authSource=admin

# ----------------------------------------------------------------------------
# JWT AUTHENTICATION
# ----------------------------------------------------------------------------
JWT_SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_IN_PRODUCTION
# Generate a secure key: openssl rand -hex 32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# ----------------------------------------------------------------------------
# CORS SETTINGS
# ----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
# For production: https://your-frontend-domain.com

# ----------------------------------------------------------------------------
# FILE UPLOAD SETTINGS
# ----------------------------------------------------------------------------
MAX_UPLOAD_SIZE=10485760
# 10MB in bytes

UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# ----------------------------------------------------------------------------
# EMAIL CONFIGURATION (Optional)
# ----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@ims2.com
SMTP_USE_TLS=true

# ----------------------------------------------------------------------------
# PAYMENT GATEWAY (Razorpay)
# ----------------------------------------------------------------------------
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# ----------------------------------------------------------------------------
# WHATSAPP BUSINESS API
# ----------------------------------------------------------------------------
WHATSAPP_API_URL=
WHATSAPP_API_TOKEN=
WHATSAPP_BUSINESS_NUMBER=

# ----------------------------------------------------------------------------
# SHOPIFY INTEGRATION
# ----------------------------------------------------------------------------
SHOPIFY_STORE_URL=
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOPIFY_ACCESS_TOKEN=

# ----------------------------------------------------------------------------
# TALLY INTEGRATION
# ----------------------------------------------------------------------------
TALLY_SERVER_URL=
TALLY_PORT=9000
TALLY_COMPANY_NAME=

# ----------------------------------------------------------------------------
# SHIPROCKET API
# ----------------------------------------------------------------------------
SHIPROCKET_EMAIL=
SHIPROCKET_PASSWORD=
SHIPROCKET_API_URL=https://apiv2.shiprocket.in/v1/external

# ----------------------------------------------------------------------------
# LOGGING & MONITORING
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

LOG_FILE=./logs/ims2.log
LOG_MAX_BYTES=10485760
# 10MB
LOG_BACKUP_COUNT=5

# ----------------------------------------------------------------------------
# REDIS (Optional - for caching and sessions)
# ----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ----------------------------------------------------------------------------
# BACKUP CONFIGURATION
# ----------------------------------------------------------------------------
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
# Daily at 2 AM (cron format)
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=./backups

# ----------------------------------------------------------------------------
# SECURITY SETTINGS
# ----------------------------------------------------------------------------
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60

# Session timeout in minutes
SESSION_TIMEOUT=480

# Enable/disable features
ENABLE_API_DOCS=true
# Set to false in production for security

# ----------------------------------------------------------------------------
# BRAND SETTINGS
# ----------------------------------------------------------------------------
BRAND_NAME=Better Vision
BRAND_LOGO_URL=/assets/logo.png
BRAND_PRIMARY_COLOR=#CD201A
BRAND_SECONDARY_COLOR=#000000

# ----------------------------------------------------------------------------
# STORE SETTINGS
# ----------------------------------------------------------------------------
DEFAULT_CURRENCY=INR
DEFAULT_TIMEZONE=Asia/Kolkata
DEFAULT_LANGUAGE=en

# ----------------------------------------------------------------------------
# FEATURE FLAGS
# ----------------------------------------------------------------------------
ENABLE_AI_INSIGHTS=false
ENABLE_MARKETPLACE=false
ENABLE_INTEGRATIONS=true
ENABLE_WORKSHOP=true
ENABLE_HR_MODULE=true

# ----------------------------------------------------------------------------
# DEVELOPMENT SETTINGS (Remove in production)
# ----------------------------------------------------------------------------
DEBUG=false
RELOAD=false
# Set to true only in development
